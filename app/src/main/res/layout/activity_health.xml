<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity_health">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="410dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_template2"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/health_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/nav_home" />

        <ImageView
            android:id="@+id/health_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/nav_health" />

        <ImageView
            android:id="@+id/health_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/nav_shop" />

        <ImageView
            android:id="@+id/health_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/nav_profile" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAddVacc"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/dark_purple"
        android:text="@string/btnAddVacc"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_img" />

    <Button
        android:id="@+id/btnAddTreat"
        android:layout_width="130dp"
        android:layout_height="49dp"
        android:backgroundTint="@color/dark_purple"
        android:text="@string/btnAddTreat"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Past_treatments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.879"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_template1"
        app:layout_constraintVertical_bias="0.171" />

    <TextView
        android:id="@+id/Vaccinations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="180dp"
        android:text="@string/Vaccinations"
        android:textColor="@color/dark_purple"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_img" />

    <TextView
        android:id="@+id/Past_treatments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="180dp"
        android:text="@string/Past_treatments"
        android:textColor="@color/dark_purple"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_template1" />

    <ImageView
        android:id="@+id/img_top_edit_profile7"
        android:layout_width="410dp"
        android:layout_height="77dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_top" />

    <ImageView
        android:id="@+id/healthArrowBack"
        android:layout_width="42dp"
        android:layout_height="39dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_top_edit_profile7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrowback" />

    <TextView
        android:id="@+id/Health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Health"
        android:textColor="@color/dark_purple"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_top_edit_profile7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_top_edit_profile7" />

    <ImageView
        android:id="@+id/health_img"
        android:layout_width="287dp"
        android:layout_height="165dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_top_edit_profile7"
        app:srcCompat="@drawable/health_img" />

    <ImageView
        android:id="@+id/health_template1"
        android:layout_width="408dp"
        android:layout_height="161dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Vaccinations"
        app:srcCompat="@drawable/health_template_img" />

    <ImageView
        android:id="@+id/health_template2"
        android:layout_width="408dp"
        android:layout_height="161dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Past_treatments"
        app:srcCompat="@drawable/health_template_img" />

    <TextView
        android:id="@+id/vacc_data1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="195dp"
        android:text="@string/vacc_data1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/health_template1"
        app:layout_constraintEnd_toEndOf="@+id/health_template1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/health_template1" />

    <TextView
        android:id="@+id/vacc_data2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:text="@string/vacc_data2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/health_template1"
        app:layout_constraintEnd_toEndOf="@+id/health_template1"
        app:layout_constraintStart_toStartOf="@+id/health_template1"
        app:layout_constraintTop_toTopOf="@+id/health_template1" />

    <TextView
        android:id="@+id/treat_data2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:text="@string/treat_data2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/health_template2"
        app:layout_constraintEnd_toEndOf="@+id/health_template2"
        app:layout_constraintStart_toStartOf="@+id/health_template2"
        app:layout_constraintTop_toTopOf="@+id/health_template2" />

    <TextView
        android:id="@+id/treat_data1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="200dp"
        android:text="@string/treat_data1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/health_template2"
        app:layout_constraintEnd_toEndOf="@+id/health_template2"
        app:layout_constraintStart_toStartOf="@+id/health_template2"
        app:layout_constraintTop_toTopOf="@+id/health_template2" />

</androidx.constraintlayout.widget.ConstraintLayout>